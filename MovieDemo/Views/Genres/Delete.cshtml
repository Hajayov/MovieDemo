@model MovieDemo.Models.Genre

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="delete-page-wrapper">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card glass-delete-card shadow-lg border-0">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                        </div>

                        <h2 class="text-white fw-bold mb-3">Permanent Deletion</h2>
                        <p class="text-secondary mb-4">
                            Are you sure you want to remove <span class="text-warning fw-bold">@Model.Name</span> from the Network Database?
                        </p>

                        <div class="impact-box p-3 rounded mb-4 text-start">
                            <h6 class="text-uppercase small fw-bold text-danger mb-2">Impact Analysis:</h6>
                            <ul class="list-unstyled mb-0 small text-light opacity-75">
                                <li><i class="bi bi-check2 me-2"></i>Category will be permanently removed.</li>
                                <li><i class="bi bi-check2 me-2"></i>@(Model.Movies?.Count ?? 0) movie(s) will be unlinked.</li>
                                <li><i class="bi bi-shield-check me-2"></i>Movies themselves will NOT be deleted.</li>
                            </ul>
                        </div>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm">
                                    CONFIRM DELETION
                                </button>
                                <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none small mt-2">
                                    Cancel and Return
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0c0c0c;
    }

    .delete-page-wrapper {
        background: radial-gradient(circle at center, rgba(220, 53, 69, 0.1) 0%, rgba(12, 12, 12, 1) 70%);
        min-height: 100vh;
        display: flex;
        align-items: center;
    }

    .glass-delete-card {
        background: rgba(255, 255, 255, 0.03) !important;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 28px;
    }

    .impact-box {
        background: rgba(0, 0, 0, 0.4);
        border-left: 4px solid #dc3545;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(220, 53, 69, 0.3) !important;
        }
</style>