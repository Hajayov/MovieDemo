@model MovieDemo.Models.Genre

@{
    ViewData["Title"] = "Create Category";
}

<div class="genre-page-wrapper">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card glass-genre-card shadow-lg border-0">
                    <div class="card-header bg-transparent border-bottom border-secondary border-opacity-25 pt-4 px-4">
                        <h3 class="text-warning fw-bold mb-0" style="letter-spacing: 1px;">NEW CATEGORY</h3>
                        <p class="text-secondary small mb-2">Expanding the Network Taxonomy</p>
                    </div>

                    <div class="card-body p-4">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                            <div class="mb-4">
                                <label asp-for="Name" class="form-label text-light small opacity-75 text-uppercase">Genre Label</label>
                                <input asp-for="Name" class="form-control glass-input" placeholder="e.g. Psychological Thriller" required autocomplete="off" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center pt-2">
                                <a asp-action="Index" class="text-secondary text-decoration-none small">
                                    <i class="bi bi-arrow-left me-1"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-warning px-4 fw-bold shadow-sm">REGISTER GENRE</button>
                            </div>
                        </form>
                    </div>
                </div>

                @* Helpful hint for the Admin *@
                <div class="mt-4 p-3 rounded bg-dark bg-opacity-50 border border-secondary border-opacity-10 text-center">
                    <p class="text-secondary small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        New categories will immediately appear in Movie Create/Edit views.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0c0c0c;
    }

    .genre-page-wrapper {
        background: radial-gradient(circle at center, #1a1a1a 0%, #0c0c0c 100%);
        min-height: 90vh;
        display: flex;
        align-items: center;
    }

    .glass-genre-card {
        background: rgba(255, 255, 255, 0.03) !important;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.08) !important;
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: white !important;
        padding: 12px 15px;
    }

        .glass-input:focus {
            background: rgba(255, 255, 255, 0.08) !important;
            border-color: #ffc107 !important;
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.2) !important;
        }

        .glass-input::placeholder {
            color: rgba(255,255,255,0.3);
            font-size: 0.9rem;
        }
</style>