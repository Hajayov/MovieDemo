<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hajayov Movies Network</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieDemo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom border-secondary box-shadow mb-3 shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Movies" asp-action="IndexM" style="letter-spacing: 1px;">
                    <span class="text-warning">HAJAYOV</span> <span class="text-light">MOVIES NETWORK</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movies" asp-action="IndexM">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>

                        @* USER LIBRARY - Visible to anyone logged in (User or Admin) *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="Movies" asp-action="MyLibrary">
                                    <i class="bi bi-collection-play"></i> My Library
                                </a>
                            </li>
                        }

                        @* Admin Tools Dropdown *@
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-info fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill"></i> Network Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark shadow border-secondary" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Movies" asp-action="Manage">
                                            <i class="bi bi-table me-2 text-info"></i>Manage Movies
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Genres" asp-action="Index">
                                            <i class="bi bi-tags me-2 text-success"></i>Manage Categories
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider border-secondary"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Movies" asp-action="Create">
                                            <i class="bi bi-plus-circle me-2 text-warning"></i>Add New Content
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="text-secondary me-3 small d-none d-md-inline">Logged in: <strong class="text-light">@User.Identity.Name</strong></span>
                                <a class="btn btn-outline-danger btn-sm px-3" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-warning btn-sm px-4" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black mt-auto py-3 border-secondary">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - <span class="fw-bold text-light">Hajayov Movies Network</span>
            <span class="mx-2 text-secondary">|</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-secondary">Privacy Policy</a>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <span class="ms-3 badge rounded-pill bg-dark text-warning border border-warning shadow-sm">Admin Access Enabled</span>
            }
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>