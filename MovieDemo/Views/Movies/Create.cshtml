@model MovieDemo.Models.Movie

@{
    ViewData["Title"] = "Register New Asset";
}

<div class="edit-page-wrapper">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card glass-edit-card shadow-lg">
                    <div class="card-header border-0 bg-transparent pt-4 px-4">
                        <h2 class="text-warning fw-bold mb-0" style="letter-spacing: 1px;">REGISTER NEW CONTENT</h2>
                        <p class="text-secondary small">Expanding the Hajayov Network Database...</p>
                    </div>

                    <div class="card-body px-4 pb-4">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                            <div class="row">
                                @* Left Column: Metadata & Categories *@
                                <div class="col-md-8">
                                    <div class="form-group mb-3">
                                        <label asp-for="Title" class="form-label text-light small opacity-75">Content Title</label>
                                        <input asp-for="Title" class="form-control glass-input" placeholder="e.g. Interstellar" required />
                                        <span asp-validation-for="Title" class="text-danger small"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Director" class="form-label text-light small opacity-75">Director</label>
                                                <input asp-for="Director" class="form-control glass-input" placeholder="e.g. Christopher Nolan" />
                                                <span asp-validation-for="Director" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Runtime" class="form-label text-light small opacity-75">Runtime (Mins)</label>
                                                <input asp-for="Runtime" type="number" class="form-control glass-input" placeholder="120" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label asp-for="ReleaseDate" class="form-label text-light small opacity-75">Release Date</label>
                                        <input asp-for="ReleaseDate" type="date" class="form-control glass-input" />
                                    </div>

                                    @* Dynamic Category Grid - FIXED NAME TO MATCH CONTROLLER *@
                                    <div class="form-group mb-3">
                                        <label class="form-label text-warning small fw-bold text-uppercase mb-2">Assign Categories</label>
                                        <div class="genre-grid p-3 rounded shadow-inner">
                                            @if (ViewBag.Genres != null)
                                            {
                                                foreach (var genre in (IEnumerable<MovieDemo.Models.Genre>)ViewBag.Genres)
                                                {
                                                    <div class="form-check custom-check">
                                                        <input class="form-check-input" type="checkbox"
                                                               name="genreIds"
                                                               value="@genre.Id"
                                                               id="genre_@genre.Id">
                                                        <label class="form-check-label text-light small" for="genre_@genre.Id">
                                                            @genre.Name
                                                        </label>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-secondary small italic">No genres found in database.</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                @* Right Column: Visual Preview *@
                                <div class="col-md-4">
                                    <div class="form-group mb-3 text-center">
                                        <label asp-for="PosterUrl" class="form-label text-light small opacity-75">Poster ID or URL</label>
                                        <input asp-for="PosterUrl" class="form-control glass-input mb-3" id="posterInput" placeholder="TMDB ID (e.g. /r79gn.jpg)" />

                                        <div class="poster-preview-box rounded mx-auto shadow-lg overflow-hidden border border-secondary border-opacity-25">
                                            <img src="https://via.placeholder.com/342x513?text=Awaiting+Poster" id="posterPreview" class="img-fluid h-100 w-100" style="object-fit: cover;" alt="Preview">
                                        </div>
                                        <small class="text-secondary d-block mt-2" style="font-size: 0.7rem;">Preview updates live</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Summary" class="form-label text-light small opacity-75">Synopsis</label>
                                <textarea asp-for="Summary" class="form-control glass-input" rows="3" placeholder="Enter movie description..."></textarea>
                            </div>

                            <div class="d-flex justify-content-between align-items-center border-top border-secondary border-opacity-25 pt-4">
                                <a asp-action="Manage" class="btn btn-outline-secondary px-4 border-0">
                                    <i class="bi bi-arrow-left me-1"></i> Back to Manager
                                </a>
                                <button type="submit" class="btn btn-warning px-5 fw-bold shadow-sm">SAVE TO NETWORK</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0c0c0c;
    }

    .edit-page-wrapper {
        background: linear-gradient(rgba(12,12,12,0.9), rgba(12,12,12,0.9)), url('https://images.unsplash.com/photo-1485846234645-a62644f84728?auto=format&fit=crop&w=1920&q=80');
        background-size: cover;
        background-attachment: fixed;
        min-height: 100vh;
    }

    .glass-edit-card {
        background: rgba(255, 255, 255, 0.02) !important;
        backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.08) !important;
        border-radius: 24px;
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: white !important;
    }

        .glass-input:focus {
            background: rgba(255, 255, 255, 0.08) !important;
            border-color: #ffc107 !important;
            box-shadow: 0 0 20px rgba(255, 193, 7, 0.15) !important;
        }

    .genre-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
        gap: 10px;
        background: rgba(0,0,0,0.3);
        max-height: 180px;
        overflow-y: auto;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .custom-check .form-check-input {
        background-color: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.2);
    }

        .custom-check .form-check-input:checked {
            background-color: #ffc107;
            border-color: #ffc107;
        }

    .poster-preview-box {
        width: 180px;
        aspect-ratio: 2/3;
        background: #000;
    }
</style>

@section Scripts {
    @* Added Validation Scripts *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('posterInput').addEventListener('input', function(e) {
            const val = e.target.value.trim();
            const preview = document.getElementById('posterPreview');
            if(val.startsWith('http')) {
                preview.src = val;
            } else if(val.length > 0) {
                // Using w500 to match your library/manage views for consistency
                preview.src = 'https://image.tmdb.org/t/p/w500' + (val.startsWith('/') ? '' : '/') + val;
            } else {
                preview.src = 'https://via.placeholder.com/342x513?text=Awaiting+Poster';
            }
        });
    </script>
}