@model MovieDemo.Models.Movie

@{
    ViewData["Title"] = "Modify Asset";
}

<div class="edit-page-wrapper">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card glass-edit-card shadow-lg">
                    <div class="card-header border-0 bg-transparent pt-4 px-4">
                        <h2 class="text-warning fw-bold mb-0" style="letter-spacing: 1px;">EDIT ASSET: @Model.Title</h2>
                        <p class="text-secondary small">Updating Network Database...</p>
                    </div>

                    <div class="card-body px-4 pb-4">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                            <div class="row">
                                @* Left Column: Details *@
                                <div class="col-md-8">
                                    <div class="form-group mb-3">
                                        <label asp-for="Title" class="form-label text-light small opacity-75">Content Title</label>
                                        <input asp-for="Title" class="form-control glass-input" required />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Director" class="form-label text-light small opacity-75">Director</label>
                                                <input asp-for="Director" class="form-control glass-input" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Runtime" class="form-label text-light small opacity-75">Runtime (Mins)</label>
                                                <input asp-for="Runtime" type="number" class="form-control glass-input" />
                                            </div>
                                        </div>
                                    </div>

                                    @* Category Grid moved up here *@
                                    <div class="form-group mb-3">
                                        <label class="form-label text-warning small fw-bold text-uppercase mb-2">Network Categories</label>
                                        <div class="genre-grid p-2 rounded">
                                            @if (ViewBag.Genres != null)
                                            {
                                                foreach (var genre in (IEnumerable<MovieDemo.Models.Genre>)ViewBag.Genres)
                                                {
                                                    @* FIXED: Logic to remember selected genres *@
                                                    bool isChecked = Model.Genres != null && Model.Genres.Any(g => g.Id == genre.Id);
                                                            <div class="form-check custom-check">
                                                                <input class="form-check-input" type="checkbox" name="selectedGenres" value="@genre.Id" id="genre_@genre.Id" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label text-light small" for="genre_@genre.Id">@genre.Name</label>
                                                            </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                @* Right Column: Visuals (Smaller) *@
                                <div class="col-md-4">
                                    <div class="form-group mb-3 text-center">
                                        <label asp-for="PosterUrl" class="form-label text-light small opacity-75">Poster ID/URL</label>
                                        <input asp-for="PosterUrl" class="form-control glass-input mb-3" id="posterInput" />

                                        <div class="poster-preview-box rounded mx-auto shadow">
                                            @{
                                                var posterSrc = string.IsNullOrEmpty(Model.PosterUrl)
                                                    ? "https://via.placeholder.com/342x513?text=No+Image"
                                                    : (Model.PosterUrl.StartsWith("http") ? Model.PosterUrl : "https://image.tmdb.org/t/p/w342" + Model.PosterUrl);
                                            }
                                            <img src="@posterSrc" id="posterPreview" class="img-fluid" alt="Preview">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Summary" class="form-label text-light small opacity-75">Synopsis</label>
                                <textarea asp-for="Summary" class="form-control glass-input" rows="3"></textarea>
                            </div>

                            <div class="d-flex justify-content-between align-items-center border-top border-secondary pt-4">
                                <a asp-action="Manage" class="btn btn-outline-secondary px-4">
                                    <i class="bi bi-arrow-left me-1"></i> Back to Manager
                                </a>
                                <button type="submit" class="btn btn-warning px-5 fw-bold shadow">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body { background-color: #0c0c0c; }
    .edit-page-wrapper {
        background: linear-gradient(rgba(12,12,12,0.92), rgba(12,12,12,0.92)), 
                    url('https://images.unsplash.com/photo-1478720568477-152d9b164e26?auto=format&fit=crop&w=1920&q=80');
        background-size: cover; background-attachment: fixed; min-height: 100vh;
    }
    .glass-edit-card {
        background: rgba(255, 255, 255, 0.03) !important;
        backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.08) !important; border-radius: 20px;
    }
    .glass-input {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important; color: white !important;
    }
    .glass-input:focus { border-color: #ffc107 !important; box-shadow: 0 0 15px rgba(255, 193, 7, 0.2) !important; }
    .genre-grid {
        display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 8px; background: rgba(0,0,0,0.2); max-height: 150px; overflow-y: auto;
    }
    .custom-check .form-check-input:checked { background-color: #ffc107; border-color: #ffc107; }
    .poster-preview-box {
        width: 160px; /* SHRUNK POSTER */
        aspect-ratio: 2/3; background: #1a1a1a; border: 1px solid rgba(255,255,255,0.1);
    }
</style>

@section Scripts {
        <script>
            document.getElementById('posterInput').addEventListener('input', function(e) {
                const val = e.target.value;
                const preview = document.getElementById('posterPreview');
                preview.src = val.startsWith('http') ? val : (val ? 'https://image.tmdb.org/t/p/w342' + val : 'https://via.placeholder.com/342x513?text=No+Image');
            });
        </script>
}