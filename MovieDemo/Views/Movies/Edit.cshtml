@model MovieDemo.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">Edit Movie: @Model.Title</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Title" class="form-label fw-bold"></label>
                                    <input asp-for="Title" class="form-control" required />
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Director" class="form-label fw-bold"></label>
                                    <input asp-for="Director" class="form-control" />
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ReleaseDate" class="form-label fw-bold">Release Date</label>
                                    <input asp-for="ReleaseDate" class="form-control" />
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Runtime" class="form-label fw-bold">Runtime (Minutes)</label>
                                    <input asp-for="Runtime" type="number" class="form-control" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PosterUrl" class="form-label fw-bold">Poster Filename/URL</label>
                                    <input asp-for="PosterUrl" class="form-control" />
                                    <small class="text-muted">ID from TMDB or a full image URL.</small>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Summary" class="form-label fw-bold"></label>
                                    <textarea asp-for="Summary" class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold d-block">Categories:</label>
                            <div class="d-flex flex-wrap gap-3 p-3 border rounded bg-light">
                                @if (ViewBag.Genres != null)
                                {
                                    foreach (var genre in ViewBag.Genres)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="selectedGenres" value="@genre.Id" id="genre_@genre.Id"
                                                   @(Model.Genres != null && Model.Genres.Any(g => g.Id == genre.Id) ? "checked" : "")>
                                            <label class="form-check-label" for="genre_@genre.Id">
                                                @genre.Name
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="IndexM" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-warning px-5">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check {
        min-width: 120px;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
</style>