@model IEnumerable<MovieDemo.Models.Movie>

@{
    ViewData["Title"] = "Network Library Management";
}

<div class="container-fluid mt-4 px-5">
    @* Header Section *@
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h1 class="display-6 fw-bold text-warning mb-0" style="letter-spacing: 1px;">MANAGE MOVIES</h1>
            <p class="text-secondary small mb-0">Manage the Hajayov Network digital assets</p>
        </div>

        <div class="d-flex gap-3 align-items-center">
            @* Cinematic Search Bar *@
            <form method="get" asp-action="Manage" class="position-relative">
                <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-secondary"></i>
                <input type="text" name="search" class="form-control bg-dark text-white border-secondary border-opacity-25 ps-5 rounded-pill shadow-sm"
                       placeholder="Filter by title..." value="@ViewBag.Search"
                       style="width: 250px; background: rgba(255,255,255,0.05) !important;"
                       onchange="this.form.submit()" />
            </form>

            @* Add Button *@
            <a asp-action="Create" class="btn btn-warning fw-bold px-4 py-2 shadow-sm rounded-pill text-nowrap">
                <i class="bi bi-plus-lg me-2"></i>ADD NEW CONTENT
            </a>
        </div>
    </div>

    @* Main Table Card *@
    <div class="card glass-card border-0 shadow-lg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="custom-thead">
                        <tr>
                            <th class="ps-4" style="width: 100px;">Asset</th>
                            <th>Title</th>
                            <th>Director</th>
                            <th>Genres</th>
                            <th class="text-center">Runtime</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model)
                        {
                                <tr class="admin-row">
                                    <td class="ps-4">
                                    @{
                                        var posterSrc = "";
                                        if (string.IsNullOrEmpty(movie.PosterUrl))
                                        {
                                            // Default placeholder for missing URLs
                                            posterSrc = "https://via.placeholder.com/92x138?text=No+Image";
                                        }
                                        // 1. Check if it is a full web URL (existing CSV links)
                                        else if (movie.PosterUrl.StartsWith("http"))
                                        {
                                            posterSrc = movie.PosterUrl;
                                        }
                                        // 2. SMART LOGIC: Check if it's a local file in your 'images' folder
                                        // (Handles filenames like "gladiator.jpg" or full paths like "/images/gladiator.jpg")
                                        else if (movie.PosterUrl.Contains(".") || movie.PosterUrl.StartsWith("/"))
                                        {
                                            posterSrc = movie.PosterUrl.StartsWith("/") ? movie.PosterUrl : "/images/" + movie.PosterUrl;
                                        }
                                        // 3. Fallback to TMDB for standard ID codes
                                        else
                                        {
                                            posterSrc = "https://image.tmdb.org/t/p/w92" + movie.PosterUrl;
                                        }
                                    }
                                    <img src="@posterSrc" alt="Poster" class="rounded shadow-sm border border-secondary"
                                         style="width: 50px; aspect-ratio: 2/3; object-fit: cover;" />
                                    </td>
                                    <td>
                                        <span class="fw-bold text-light">@movie.Title</span>
                                    </td>
                                    <td class="text-secondary">@movie.Director</td>
                                    <td>
                                    @foreach (var genre in movie.Genres)
                                    {
                                                <span class="badge rounded-pill bg-dark text-info border border-info border-opacity-25 me-1" style="font-size: 0.7rem;">
                                            @genre.Name
                                                </span>
                                    }
                                    </td>
                                    <td class="text-center text-secondary small">@movie.Runtime min</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group btn-group-sm rounded shadow-sm">
                                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-warning" title="Edit Content">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@movie.Id" asp-route-returnUrl="Manage" class="btn btn-outline-light" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-outline-danger" title="Remove Asset">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="IndexM" class="text-warning text-decoration-none fw-bold small">
            <i class="bi bi-arrow-left me-1"></i> RETURN TO GALLERY
        </a>
    </div>
</div>

@* STYLING TO MATCH THE NETWORK THEME *@
<style>
    body {
        background-color: #0c0c0c;
        color: #e0e0e0;
    }

    /* Glass Effect Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.03) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05) !important;
        border-radius: 15px;
        overflow: hidden;
    }

    /* Professional Table Header */
    .custom-thead {
        background-color: rgba(255, 255, 255, 0.05);
        border-bottom: 2px solid rgba(255, 193, 7, 0.3);
    }

    .custom-thead th {
        color: #ffc107 !important;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 1.5px;
        padding: 15px 10px;
    }

    /* Hover effects for rows */
    .admin-row {
        transition: background-color 0.2s ease;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.05) !important;
    }

    /* Action Buttons styling */
    .btn-group .btn {
        padding: 6px 12px;
        border-color: rgba(255, 255, 255, 0.1);
    }

    .btn-outline-warning:hover { color: #000; }

    /* Scrollbar for dark theme */
    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: #0c0c0c; }
    ::-webkit-scrollbar-thumb { background: #333; border-radius: 10px; }
    ::-webkit-scrollbar-thumb:hover { background: #ffc107; }
</style>