@model MovieDemo.Models.Movie

@{
    ViewData["Title"] = "Decommission Asset";
}

<div class="delete-page-wrapper">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card glass-delete-card border-0 shadow-lg">
                    <div class="card-header bg-transparent border-bottom border-danger py-4 text-center">
                        <i class="bi bi-exclamation-octagon text-danger display-4 mb-2"></i>
                        <h2 class="text-danger fw-bold mb-0" style="letter-spacing: 2px;">CONFIRM DELETION</h2>
                        <p class="text-secondary small text-uppercase">Warning: Permanent Network Removal</p>
                    </div>

                    <div class="card-body px-4 py-5 text-center">
                        @* Shrunken Poster Preview *@
                        <div class="delete-preview-box rounded mx-auto mb-4 shadow">
                            @{
                                var posterSrc = string.IsNullOrEmpty(Model.PosterUrl)
                                    ? "https://via.placeholder.com/342x513?text=No+Image"
                                    : (Model.PosterUrl.StartsWith("http") ? Model.PosterUrl : "https://image.tmdb.org/t/p/w342" + Model.PosterUrl);
                            }
                            <img src="@posterSrc" class="img-fluid rounded" alt="Asset Preview">
                        </div>

                        <h3 class="text-light fw-bold">@Model.Title</h3>
                        <p class="text-warning mb-4">Directed by @Model.Director</p>

                        <div class="alert bg-danger bg-opacity-10 border-danger text-danger small mb-5">
                            <i class="bi bi-shield-slash me-2"></i>
                            <strong>CAUTION:</strong> This asset will be permanently purged from the database. This action cannot be reverted.
                        </div>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                                <a asp-action="Manage" class="btn btn-outline-secondary px-4 order-2 order-sm-1">
                                    <i class="bi bi-arrow-left me-1"></i> Back to Manager
                                </a>
                                <button type="submit" class="btn btn-danger px-5 fw-bold shadow order-1 order-sm-2">
                                    Confirm Delete
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body { background-color: #0c0c0c; }
    .delete-page-wrapper {
        background: radial-gradient(circle at center, rgba(220, 53, 69, 0.1) 0%, rgba(12, 12, 12, 1) 70%),
                    url('https://i.ibb.co/HfdDxD8H/manage-BG.png');
        background-size: cover; background-attachment: fixed; min-height: 100vh;
    }
    .glass-delete-card {
        background: rgba(255, 255, 255, 0.03) !important;
        backdrop-filter: blur(25px);
        border: 1px solid rgba(220, 53, 69, 0.2) !important;
        border-radius: 24px;
    }
    .delete-preview-box {
        width: 140px; /* Small consistent size */
        aspect-ratio: 2/3;
        background: #1a1a1a;
        border: 2px solid rgba(220, 53, 69, 0.3);
        overflow: hidden;
    }
    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: all 0.3s ease;
    }
    .btn-danger:hover {
        background-color: #b02a37;
        box-shadow: 0 0 20px rgba(220, 53, 69, 0.4) !important;
        transform: translateY(-2px);
    }
</style>